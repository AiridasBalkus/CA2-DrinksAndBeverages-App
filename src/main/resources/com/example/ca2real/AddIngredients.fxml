<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ca2real.IngredientsController">
    <top>
        <Label text="Add a New Ingredient" style="-fx-font-size: 18px; -fx-padding: 10px;"/>
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 10px;">
            <TextField fx:id="nameField" promptText="Ingredient Name"/>
            <TextField fx:id="descriptionField" promptText="Description"/>
            <TextField fx:id="abvField" promptText="ABV (Alcohol By Volume)"/>
            <Button text="Add Ingredient" onAction="#handleAddIngredient"/>
            <Button text="Update" onAction="#updateListView"/>
        </VBox>
    </center>
    <bottom>
        <VBox spacing="10" style="-fx-padding: 10px;">
            <Label text="Current Ingredients:"/>
            <ListView fx:id="ingredientsListView"/>
        </VBox>
    </bottom>
</BorderPane>
