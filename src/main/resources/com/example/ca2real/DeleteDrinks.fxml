<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ca2real.DrinksController" style="-fx-font-family: 'Arial'; -fx-font-size: 14; -fx-padding: 10;"  prefWidth="500" prefHeight="500">
    <top>
        <Label text="Delete Drink" style="-fx-font-size: 18px; -fx-padding: 10;" />
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="Select a Drink to Delete:" />
            <Button text="Update" onAction="#updateListView" />
            <ListView fx:id="drinksListView" />
            <Button text="Delete Selected Drink" onAction="#handleDeleteDrink" />
        </VBox>
    </center>
</BorderPane>

