<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ca2real.DrinksController" style="-fx-font-family: 'Arial'; -fx-font-size: 14; -fx-padding: 10;" prefWidth="500" prefHeight="500">
    <top>
        <Label text="Add a New Drink" style="-fx-font-size: 18px; -fx-padding: 10;" />
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <TextField fx:id="nameField" promptText="Drink Name" />
            <TextField fx:id="originField" promptText="Origin" />
            <TextField fx:id="descriptionField" promptText="Description" />
            <TextField fx:id="imageUrlField" promptText="Image URL" />
            <Button text="Add Drink" onAction="#handleAddDrink" />
            <Button text="Update" onAction="#updateListView" />
        </VBox>
    </center>
    <bottom>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="Current Drinks:" />
            <ListView fx:id="drinksListView" />
        </VBox>
    </bottom>
</BorderPane>

